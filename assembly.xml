<assembly>
    <id>package</id>
    <formats>
        <format>tar.gz</format>
    </formats>
    <includeBaseDirectory>true</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <directory>src/main/resources/bin</directory>
            <outputDirectory>${file.separator}bin</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>static</directory>
            <outputDirectory>${file.separator}static</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>templates</directory>
            <outputDirectory>${file.separator}templates</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>src/main/resources</directory>
            <includes>
                <include>application.yml</include>
            </includes>
            <outputDirectory>${file.separator}config</outputDirectory>
        </fileSet>
    </fileSets>

    <files>
        <file>
            <source>src/main/resources/banner.txt</source>
            <outputDirectory>${file.separator}</outputDirectory>
        </file>
        <file>
            <source>${project.build.directory}${file.separator}${build.finalName}.jar</source>
            <outputDirectory>${file.separator}</outputDirectory>
            <destName>lckclub.jar</destName>
        </file>
    </files>

